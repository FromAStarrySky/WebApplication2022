@model iSchoolWebApp.Models.FacultyRootModel;
@{ ViewData["Title"] = Model.Title; }
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    /* Profile Card for each Faculty and Staff*/
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
        display:inline-table;
        margin: 30px;
    }
    /*Title of faculty/staff's position */
    .title {
        color: grey;
        font-size: 18px;
    }
    /* Button for Faculty/Staff's website if they have it */
    button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: orange;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    a {
        text-decoration: none;
        color: black;
    }
    /* Changed color for heading 5 in faculty/staff's names*/
    h5 {
        color:black;
    }
    p {
        color: black;
    }
    /* Button gets lighter when user hovers over any of the person's link to website */
        button:hover, a:hover {
            opacity: 0.7;
        }
</style>


<h1>Faculty at iSchool</h1>

@foreach (var faculty in Model.faculty)
{
<div class="card">
    <img src="@faculty.imagePath" alt="pic of @faculty.name" style="width:200px;height:200px" />
    <h5>@faculty.name</h5>
    <!-- Strangest thing is even if the condition states not "" or not null, it still displays it-->
    <!-- Retrieve a faculty's title-->
    <p class="title">@faculty.title</p>
    <div style="text-align:left">
        <!-- Retrieve a faculty's office-->
        @if (faculty.office != "" || faculty.office != null)
        {
    <p><i class="fa-solid fa-school"></i> @faculty.office</p>}
        <!-- Retrieve a faculty's phone-->
        @if (faculty.phone != "" || faculty.phone != null)
        {
    <p><i class="fa-solid fa-phone"></i> @faculty.phone</p>}
        <!-- Retrieve a faculty's email-->
        @if (faculty.email != "" || faculty.email != null)
        {
    <p><i class="fa-solid fa-envelope"></i> @faculty.email</p>}
        <!-- Retrieve a faculty's website-->
        @if (faculty.website != "" || faculty.website != null)
        {
    <p><button><i class="fa-solid fa-address-card"></i> <a href="@faculty.website" target="_blank">My Site</a></button></p>}

    </div>
</div>
}

